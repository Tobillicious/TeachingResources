---
const { unit } = Astro.props;
const { data } = unit;
---
<a href={`/unit-plans/${unit.slug}`} class="block p-6 bg-surface rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 border-2 border-primary transform hover:-translate-y-1 h-full flex flex-col">
  <h3 class="text-2xl font-bold font-heading text-primary mb-2">{data.title}</h3>
  <p class="text-text-light text-base mb-4 flex-grow">{data.description}</p>
  <div class="mt-auto pt-4 border-t border-gray-200">
    {data.duration && (
      <span class="inline-block bg-secondary text-text text-xs font-semibold px-2.5 py-1 rounded-full mr-2 mb-2">
        {data.duration}
      </span>
    )}
    {data.learningArea && (
      <span class="inline-block bg-primary-dark text-white text-xs font-semibold px-2.5 py-1 rounded-full mr-2 mb-2">
        {data.learningArea}
      </span>
    )}
  </div>
</a>
