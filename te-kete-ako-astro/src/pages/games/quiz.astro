---
import Layout from '../../layouts/Layout.astro';
import Quiz from '../../components/Quiz.tsx';

const quizQuestions = [
  {
    question: "What is the Māori name for the star cluster also known as the Pleiades?",
    options: ["Te Ika-a-Māui", "Matariki", "Aoraki", "Tāne Mahuta"],
    correctAnswer: "Matariki",
  },
  {
    question: "Which of the following is a primary color?",
    options: ["Green", "Orange", "Blue", "Violet"],
    correctAnswer: "Blue",
  },
  {
    question: "In the context of the web, what does HTML stand for?",
    options: ["HyperText Markup Language", "High-Level Text Management Logic", "HyperTransfer Machine Language", "Home Tool Markup Language"],
    correctAnswer: "HyperText Markup Language",
  },
];
---

<Layout title="Educational Games: Quiz">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-4 font-heading">Knowledge Check Quiz</h1>
    <p class="text-lg mb-8">Test your knowledge with this interactive quiz.</p>
    
    <div class="max-w-2xl mx-auto">
      <Quiz data={{ questions: quizQuestions }} client:load />
    </div>

  </main>
</Layout>
