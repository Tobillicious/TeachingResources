---
import Layout from '@/layouts/Layout.astro';
import { getCollection } from 'astro:content';
import UnitPlanCard from '@/components/UnitPlanCard.astro';

const unitPlans = await getCollection('unitPlans');
---

<Layout title="Unit Plans">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-4 font-heading">Unit Plans</h1>
    <p class="text-lg mb-8">A collection of comprehensive, interconnected units of work designed for deep learning.</p>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {unitPlans.map(unit => (
        <UnitPlanCard unit={unit} />
      ))}
    </div>
  </main>
</Layout>

